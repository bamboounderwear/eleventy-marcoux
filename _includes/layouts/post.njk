---
layout: layouts/base.njk
section: post
---

<article>
  <div class="post-header"> <!-- This is the new container for the title and content -->
    <h1>{{ title }}</h1>
    <div class="post-content">
      {{ layoutContent | safe }}
    </div>
  </div>
  
  <!-- Gallery Images -->
  {% if gallery %}
    <div class="gallery-image">
      {% for item in gallery %}
        <img src="{{ item.image }}" alt="Gallery Image">
      {% endfor %}
    </div>
  {% endif %}

</article>

<nav>
  <a href="{{ '/blog/' | url }}">‚Üê Blog index</a>
</nav>
