<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">

	{% include "components/head.njk" %}

	<body>

		<header class="header-invert">
    <div class="header-container">
        <a href="{{ '/' | url }}" class="logo"><img src="/static/img/marcoux_logo_white.png" class="logo-image" /></a>
        {% include "components/nav.njk" %}
    </div>
</header>

    <div class="hero-background">
        <video autoplay loop muted playsinline class="hero-video">
            <source src="{{ video }}" type="video/mp4">
            Your browser does not support the video tag.
        </video>
        <!-- Add any additional content here -->
        <div class="hero-content">
            <h1>Welcome to Our Website</h1>
            <p>This is a hero banner with a background video.</p>
        </div>
    </div>

		<main>
			{{ layoutContent | safe }}
            
<section class="projects-gallery">
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %}>
				<a href="{{ post.url | url }}">
						<img src="{{ post.data.image }}" />
					<h3>
						{% if post.data.title %}
							{{ post.data.title }}
						{% else %}
							Untitled
						{% endif %}
					</h3>
				</a>
			{% if post.data.summary %}
				<p class="arrow-cta">
					View project â†’ 
					{# Project summary (uncomment to readd) {{ post.data.summary }} #}
				</p>
			{% endif %}

		</article>
	{% endfor %}
</section>


		</main>

		{% include "components/footer.njk" %}

	</body>

</html>

